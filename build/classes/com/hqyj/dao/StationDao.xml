<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hqyj.dao.StationDao">
    <!-- xml和UserDao.java接口文件名称一致。namespace配置接口全类名 -->
    <!--
        id和接口中方法名一致
        parameterType值和接口中方法的参数类型一致
        resultType和接口中方法返回值类型一致
     -->
    <select id="queryAll" resultType="station">
        select * from station order by createtime
    </select>
</mapper>